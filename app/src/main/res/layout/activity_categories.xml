<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_cat1"
        android:src="@drawable/placeholder"
        android:layout_marginStart="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="catOnClick"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_cat2"
        android:src="@drawable/placeholder"
        android:layout_marginEnd="52dp"
        android:layout_alignTop="@+id/iv_cat1"
        android:layout_alignParentEnd="true"
        android:onClick="catOnClick"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/iv_cat3"
        android:layout_marginTop="36dp"
        android:src="@drawable/instagram"
        android:layout_below="@+id/iv_cat1"
        android:layout_alignStart="@+id/iv_cat1"
        android:onClick="catOnClick"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/iv_cat4"
        android:src="@drawable/instagram"
        android:layout_alignTop="@+id/iv_cat3"
        android:layout_alignStart="@+id/iv_cat2"
        android:onClick="catOnClick"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_cat5"
        android:src="@drawable/placeholder"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/iv_cat3"
        android:layout_alignStart="@+id/iv_cat3"
        android:onClick="catOnClick"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_cat6"
        android:src="@drawable/placeholder"
        android:layout_alignTop="@+id/iv_cat5"
        android:layout_alignStart="@+id/iv_cat4"
        android:onClick="catOnClick"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/iv_cat7"
        android:layout_marginTop="34dp"
        android:src="@drawable/instagram"
        android:layout_below="@+id/iv_cat5"
        android:layout_alignStart="@+id/iv_cat5"
        android:onClick="catOnClick"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:id="@+id/iv_cat8"
        android:src="@drawable/instagram"
        android:layout_alignBottom="@+id/iv_cat7"
        android:layout_alignEnd="@+id/iv_cat6"
        android:onClick="catOnClick"/>
</RelativeLayout>