<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hackgt.oddjobs.RegisterActivity"
    android:id="@+id/relLayout"
    android:background="#5c96ff">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a Username:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="28dp"
        android:textSize="25dp"
        android:layout_above="@+id/tbUsername"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/tbUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvError"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_logo" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose a different username."
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000"
        android:visibility="invisible"
        android:layout_above="@+id/submitButton"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/iv_logo"
        android:src="@drawable/icon_circle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OddJobs"
        android:id="@+id/tv_logo"
        android:typeface="normal"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
