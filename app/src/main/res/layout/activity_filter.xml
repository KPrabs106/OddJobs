<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:rsb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hackgt.oddjobs.FilterActivity"
    android:id="@+id/relLayout"
    android:background="#fafffd"
    android:contextClickable="true">
    <activity android:theme="@style/Theme.AppCompat.Light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:id="@+id/cb1"
        android:checked="false"
        android:textSize="25dp"
        android:layout_below="@+id/tv_categories"
        android:layout_alignParentStart="true"
        android:contextClickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scholastic"
        android:id="@+id/cb2"
        android:checked="false"
        android:textSize="25dp"
        android:layout_alignTop="@+id/cb1"
        android:layout_alignParentEnd="true"
        android:contextClickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholding"
        android:id="@+id/cb3"
        android:checked="false"
        android:textSize="25dp"
        android:layout_below="@+id/cb1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:contextClickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transport"
        android:id="@+id/checkBox"
        android:checked="false"
        android:textSize="25dp"
        android:layout_alignTop="@+id/cb3"
        android:layout_alignStart="@+id/cb2"
        android:contextClickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Domestic"
        android:id="@+id/cb5"
        android:checked="false"
        android:textSize="25dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/cb3"
        android:layout_alignParentStart="true"
        android:contextClickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web"
        android:id="@+id/cb6"
        android:checked="false"
        android:textSize="25dp"
        android:layout_alignTop="@+id/cb5"
        android:layout_alignStart="@+id/checkBox"
        android:contextClickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Educational"
        android:id="@+id/cb7"
        android:checked="false"
        android:textSize="25dp"
        android:layout_below="@+id/cb5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:contextClickable="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Misc"
        android:id="@+id/cb8"
        android:checked="false"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/cb7"
        android:layout_alignStart="@+id/cb6"
        android:contextClickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categories"
        android:id="@+id/tv_categories"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cost"
        android:id="@+id/tv_cost"
        android:textSize="25dp"
        android:layout_above="@+id/seekbar_placeholder"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location"
        android:id="@+id/tv_location"
        android:textSize="25dp"
        android:layout_above="@+id/tf_location"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/tf_location"
        android:text="Enter Location"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <org.florescu.android.rangeseekbar.RangeSeekBar
        android:id="@+id/seekbar_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        rsb:absoluteMaxValue="300"
        rsb:absoluteMinValue="0"
        android:layout_above="@+id/tv_location"
        android:layout_alignParentStart="true" />

</RelativeLayout>
